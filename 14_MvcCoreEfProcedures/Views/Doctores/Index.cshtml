@model IEnumerable<_14_MvcCoreEfProcedures.Models.Doctor>

@{
    ViewData["Title"] = "Index";
    List<string> especialidades = ViewData["ESPECIALIDADES"] as List<string>;
}

<h1>Index</h1>

<form method="post">
    <label>Seleccione la especialidad</label>
    <select class="form-select" name="especialidad">
        @foreach (string esp in especialidades)
        {
            <option value="@esp">@esp</option>
        }
    </select>

    <label>Incremento salarial</label>
    <input type="number" class="form-control" name="incremento" required/>

    <button type="submit" class="btn btn-success">Incrementar</button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HospitalCod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HospitalCod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
